---
interface Props {
  isProject?: boolean;
}

const { isProject = false } = Astro.props;

// =============================================
// CONFIGURATION : Activer/désactiver l'alerte
// =============================================
const ALERT_ENABLED = true;
// =============================================
---

{ALERT_ENABLED && (
  <div class={`mise-en-avant ${isProject ? 'display-project' : ''}`}>
      <p>
          Diplômé d'un <a href="https://www.etsmtl.ca/etudes/premier-cycle/baccalaureat-genie-logiciel" target="_blank">baccalauréat en génie à l'École de Technologie Supérieure</a>, <br>je suis à la recherche d'un emploi en ingénierie logiciel ainsi qu'un.e superviseur.e à l'<a href="https://www.oiq.qc.ca/" target="_blank">Ordre des Ingénieurs du Québec</a>.
      </p>
  </div>
)}
