---
import fs from 'node:fs';
import path from 'node:path';

interface Props {
  name:
    | 'css'
    | 'javascript'
    | 'typescript'
    | 'php'
    | 'photoshop'
    | 'illustrator'
    | 'xd'
    | 'plantuml'
    | 'fastapi'
    | 'docker'
    | 'postgresql'
    | 'ollama'
    | 'chromadb'
    | 'nextjs'
    | 'flutter'
    | 'flutterflow'
    | 'figma';
}

const { name } = Astro.props;
const iconPath = path.resolve('public/images/logo', `${name}.svg`);
const svg = fs.existsSync(iconPath) ? fs.readFileSync(iconPath, 'utf-8') : '';
const className = `tech-icon tech-icon-${name}`;
---

<span class={className}>
  <Fragment set:html={svg} />
</span>
